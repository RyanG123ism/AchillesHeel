            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <br />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
