@model IEnumerable<AchillesHeel_RG.Models.User>

@{
    ViewBag.Title = "ViewAllMembers";
}

@if (TempData["AlertMessage"] != null)
{
    <br />
    <div class="alert alert-warning">
        <strong>@TempData["AlertMessage"]</strong>
    </div>
}

<h2>ViewAllMembers</h2>


<div class="card">
    @using (Html.BeginForm("SearchForUser", "Staff"))
    {
        <p>Search by Name:</p>
        <input type="text" name="FullName" />
        <button type="submit" name="SearchButton">Search</button>
        @Html.ActionLink("Reset Filters", "ViewAllMembers")
    }
</div>

<br />

<p>
    @Html.ActionLink("CreateMember", "Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Joined)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Joined)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Admin", new { id = item.Id }, htmlAttributes: null) |
            </td>
        </tr>
    }

</table>
