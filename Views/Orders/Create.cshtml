@using AchillesHeel_RG.Models
@using Microsoft.AspNet.Identity
@model AchillesHeel_RG.Models.Order

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create_UserSelected", "Orders"))
{
    <p>Order for:</p>
    <div class="form-group">
        <p>Select a user that this order will be placed under:</p>
        <div class="col-md-10">
            @Html.DropDownList("Users", ViewBag.Users as SelectList, "Select User", new { @class = "form-control"})
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Create_AddressSelected", "Orders"))
{
    if (ViewBag.User != null)
    {
        <div class="form-group">
            <p>Which Address would you like this to be sent to?</p>
            <div class="col-md-10">
                @Html.DropDownList("Addresses", ViewBag.Addresses as SelectList, "Select From User Addresses", new { @class = "form-control"})
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
}

@using (Html.BeginForm("Create_AddProduct", "Orders"))
{
    if (ViewBag.Address != null && ViewBag.User != null)
    {
        <div class="form-group">
            <p>Add a Product</p>
            <div class="col-md-10">
                @Html.DropDownList("Products", ViewBag.Products as SelectList, "Add a Product to Order", new { @class = "form-control" })
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

